{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noImplicitAny": true
  },
  "include": [
    "src/electron/**/*.ts",
    "src/electron/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
